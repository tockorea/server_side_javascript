extends ../layout
block content
  article
  form(action='/topic/'+topic.id+'/edit' method='post')
    p
      input(type='text' name='title' placeholder='title' value=topic.title)
    p
      textarea(name='description' rows='10' placeholder='description')= topic.description
    p
      input(type='text' name='author' placeholder='author' readonly value=topic.author)
    p
      input(type='submit')
